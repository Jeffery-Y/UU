<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/layout_all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/theme_bg_color"
        android:orientation="vertical" >

        <include
            android:id="@+id/common_actionbar"
            layout="@layout/include_action_bar" />

        <RelativeLayout
            android:id="@+id/layout_head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:minHeight="80dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" >

            <TextView
                style="@style/Smile.TextView._Black"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="@string/add_avator" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/iv_set_avator"
                    style="@style/Smile.ImageView"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:padding="5dp"
                    android:src="@drawable/head" />

                <ImageView
                    android:id="@+id/iv_arrow"
                    style="@style/Smile.ImageView"
                    android:layout_width="20dp"
                    android:src="@drawable/register_bottom_arrow" />
            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/base_color_text_gray" />

        <RelativeLayout
            android:id="@+id/layout_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:padding="10dp" >

            <TextView
                style="@style/Smile.TextView._Black"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="@string/add_name" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_set_name"
                    style="@style/Smile.TextView._Black"
                    android:drawablePadding="10dp" />

                <ImageView
                    android:id="@+id/iv_account_arrow"
                    style="@style/Smile.ImageView"
                    android:layout_width="20dp"
                    android:src="@drawable/register_bottom_arrow" />
            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/base_color_text_gray" />


        <RelativeLayout
            android:id="@+id/layout_gender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:padding="10dp" >

            <TextView
                style="@style/Smile.TextView._Black"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="@string/add_gender" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_set_gender"
                    style="@style/Smile.TextView._Black"
                    android:drawablePadding="10dp" />

                <ImageView
                    android:id="@+id/iv_gender_arrow"
                    style="@style/Smile.ImageView"
                    android:layout_width="20dp"
                    android:src="@drawable/register_bottom_arrow" />

            </LinearLayout>
        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/base_color_text_gray" />

        <RelativeLayout
            android:id="@+id/layout_nick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:padding="10dp" >

            <TextView
                style="@style/Smile.TextView._Black"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="@string/add_nick" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_set_nick"
                    style="@style/Smile.TextView._Black"
                    android:drawablePadding="10dp" />

                <ImageView
                    android:id="@+id/iv_nick_arrow"
                    style="@style/Smile.ImageView"
                    android:layout_width="20dp"
                    android:src="@drawable/register_bottom_arrow" />
            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/base_color_text_gray" />

        <RelativeLayout
            android:id="@+id/layout_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:padding="10dp" >

            <TextView
                style="@style/Smile.TextView._Black"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="@string/add_email" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_set_email"
                    style="@style/Smile.TextView._Black"
                    android:layout_marginRight="20dp"
                    android:drawablePadding="10dp" />

                <ImageView
                    android:id="@+id/iv_email_arrow"
                    style="@style/Smile.ImageView"
                    android:layout_width="20dp"
                    android:src="@drawable/register_bottom_arrow" />
            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/base_color_text_gray" />

        <RelativeLayout
            android:id="@+id/layout_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:padding="10dp" >

            <TextView
                style="@style/Smile.TextView._Black"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="@string/add_phone" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_set_phone"
                    style="@style/Smile.TextView._Black"
                    android:layout_marginRight="20dp"
                    android:drawablePadding="10dp" />

                <ImageView
                    android:id="@+id/iv_phone_arrow"
                    style="@style/Smile.ImageView"
                    android:layout_width="20dp"
                    android:src="@drawable/register_bottom_arrow" />
            </LinearLayout>
        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/base_color_text_gray" />

        <RelativeLayout
            android:id="@+id/layout_two_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:padding="6dp" >

            <TextView
                style="@style/Smile.TextView._Black"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="@string/add_two_code" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/two_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/two_code_icon"/>

            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/base_color_text_gray" />

        <Button
            android:id="@+id/btn_add_friend"
            style="@style/Smile.Button.theme"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="@dimen/activity_vertical_margin"
            android:layout_marginRight="@dimen/activity_vertical_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:text="@string/add_friend"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_chat"
            style="@style/Smile.Button.theme"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="@dimen/activity_vertical_margin"
            android:layout_marginRight="@dimen/activity_vertical_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:text="@string/chat" />

        <Button
            android:id="@+id/btn_back"
            style="@style/Smile.Button.logout"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="@dimen/activity_vertical_margin"
            android:layout_marginRight="@dimen/activity_vertical_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:text="@string/blacklist" />

        <Button
            android:id="@+id/btn_delete"
            style="@style/Smile.Button.logout"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="@dimen/activity_vertical_margin"
            android:layout_marginRight="@dimen/activity_vertical_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:text="@string/delete_friend" />

        <RelativeLayout
            android:id="@+id/layout_black_tips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:visibility="gone" >

            <TextView
                style="@style/Smile.TextView._Black"
                android:layout_centerInParent="true"
                android:text="@string/black_tips"
                android:textSize="14sp" />
        </RelativeLayout>

    </LinearLayout>

</ScrollView>


